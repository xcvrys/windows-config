{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "console_title_template": "{{.Folder}}{{if .Root}} :: root{{end}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "#E06C75",
          "template": "root <#ffffff>in</> "
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#8ec07c",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#C678DD",
          "template": "<#ffffff>on</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }} ",
          "properties": {
            "fetch_status": true
          }
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#98C379",
          "template": "<#ffffff>via</> \ue781 {{ if .PackageManagerIcon }}{{ .PackageManagerIcon }} {{ end }}{{ .Full }} ",
          "properties": {
            "fetch_version": true
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#C94A16",
          "template": "x "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#8ec07c"
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#8ec07c",
          "template": "\udb82\udd54 {{ .FormattedMs }}s ",
          "properties": {
            "style": "dallas",
            "threshold": 0
          }
        },
        {
          "type": "root",
          "style": "diamond",
          "template": " \uf0e7 ",
          "properties": {
            "root_icon": "\uf292 "
          }
        },
        {
          "type": "sysinfo",
          "style": "diamond",
          "foreground": "#8ec07c",
          "template": "\ue266 {{ round .PhysicalPercentUsed .Precision }}%"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#8ec07c",
          "template": "âžœ "
        }
      ],
      "newline": true
    }
  ]
}
